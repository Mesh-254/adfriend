{
  "manifest_version": 3,
  "name": "AdFriend App",
  "description": "AdFriend app to replace ads with positive content",
  "version": "1.0.0",
  
  "start_url": ".",
  "display": "standalone",
  "theme_color": "#000000",
  "background_color": "#ffffff",

  "permissions": [
    "scripting", "activeTab"
  ],
    

  "background":{
    "service_worker": "background.js"
  },

  "action": {
    "default_popup": "popup.html",
    "default_title" :"Open"
  },

  "content_scripts":[{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}
